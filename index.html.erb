<div class="container">
  <table class="table table-hover">
    <thead class="thead-light">
    <tr>
      <th>Titel</th>
      <th colspan="2">Aktion</th>
    </tr>
    </thead>
    <tbody>
    <% @broadcasts.each do |b| %>
      <tr>
        <td><%= link_to b.name, broadcast_path(b.id) %></td>
        <td><%= link_to "Ändern", edit_broadcast_path(b.id) %></td>
        <td><%= link_to "Löschen", broadcast_path(b.id), method: :delete,
                        data: { confirm: "Sind Sie sicher?" } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to "Neue Sendung erfassen", new_broadcast_url %><br />
  <%= link_to "Kanäle", chanels_path %>
</div>

